@page "{id:int}"
@model FinalProject.Pages.Admin.NovelDetailsModel
@{
    ViewData["Title"] = "Chi tiết tiểu thuyết";
    Layout = "_Layout";
}

<!-- Novel Details Section -->
<div class="container-fluid">
    <!-- Admin Header -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-book-open text-primary"></i> Chi tiết tiểu thuyết</h2>
                    <p class="text-muted mb-0">@Model.Novel?.Title</p>
                </div>
                <div class="btn-group" role="group">
                    <a asp-page="/Admin/EditNovel" asp-route-id="@Model.Novel?.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa
                    </a>
                    <a asp-page="/Admin/Novels" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Novel != null)
    {
        <!-- Action Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Main Content -->
        <div class="row">
            <!-- Left Column - Image and Basic Info -->
            <div class="col-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="fas fa-image me-2"></i>Thông tin cơ bản</h5>
                    </div>
                    <div class="card-body">
                                        <!-- Novel Image -->
                                        <div class="text-center mb-4">
                                            @if (!string.IsNullOrEmpty(Model.Novel.ImageUrl))
                                            {
                                                <img src="@Model.Novel.ImageUrl" alt="@Model.Novel.Title" 
                                                     class="img-fluid rounded shadow" style="max-height: 400px;">
                                            }
                                            else
                                            {
                                                <div class="p-5 bg-light border rounded text-center">
                                                    <i class="fas fa-book fa-4x text-muted mb-3"></i>
                                                    <p class="text-muted">Chưa có ảnh bìa</p>
                                                </div>
                                            }
                                        </div>

                                        <!-- Basic Information -->
                                        <div class="border-top pt-3">
                                            <div class="row mb-2">
                                                <div class="col-5 fw-bold">Tác giả:</div>
                                                <div class="col-7">@Model.Novel.AuthorName</div>
                                            </div>

                                            @if (!string.IsNullOrEmpty(Model.Novel.TranslatorName))
                                            {
                                                <div class="row mb-2">
                                                    <div class="col-5 fw-bold">Người dịch:</div>
                                                    <div class="col-7">@Model.Novel.TranslatorName</div>
                                                </div>
                                            }

                                            <div class="row mb-2">
                                                <div class="col-5 fw-bold">Ngôn ngữ:</div>
                                                <div class="col-7">
                                                    @switch (Model.Novel.Language)
                                                    {
                                                        case "vi": <text>Tiếng Việt</text>; break;
                                                        case "en": <text>English</text>; break;
                                                        case "zh": <text>中文</text>; break;
                                                        case "ja": <text>日本語</text>; break;
                                                        case "ko": <text>한국어</text>; break;
                                                        default: <text>@Model.Novel.Language</text>; break;
                                                    }
                                                </div>
                                            </div>

                                            <div class="row mb-2">
                                                <div class="col-5 fw-bold">Trạng thái:</div>
                                                <div class="col-7">
                                                    @switch (Model.Novel.Status)
                                                    {
                                                        case DAL.Entities.NovelStatus.Ongoing:
                                                            <span class="badge bg-warning">Đang tiến hành</span>
                                                            break;
                                                        case DAL.Entities.NovelStatus.Completed:
                                                            <span class="badge bg-success">Hoàn thành</span>
                                                            break;
                                                        case DAL.Entities.NovelStatus.Hiatus:
                                                            <span class="badge bg-secondary">Tạm dừng</span>
                                                            break;
                                                        case DAL.Entities.NovelStatus.Dropped:
                                                            <span class="badge bg-danger">Bỏ dở</span>
                                                            break;
                                                    }
                                                </div>
                                            </div>

                                            <div class="row mb-2">
                                                <div class="col-5 fw-bold">Ngày xuất bản:</div>
                                                <div class="col-7">@Model.Novel.PublishedDate.ToString("dd/MM/yyyy")</div>
                                            </div>

                                            <div class="row mb-2">
                                                <div class="col-5 fw-bold">Ngày tạo:</div>
                                                <div class="col-7">@Model.Novel.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                                            </div>

                                            @if (Model.Novel.UpdatedAt.HasValue)
                                            {
                                                <div class="row mb-2">
                                                    <div class="col-5 fw-bold">Cập nhật cuối:</div>
                                                    <div class="col-7">@Model.Novel.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column - Details and Statistics -->
                            <div class="col-8">
                                <!-- Statistics Cards -->
                                <div class="row mb-4">
                                    <div class="col-md-3">
                                        <div class="card bg-gradient-primary text-white mb-3">
                                            <div class="card-body text-center">
                                                <i class="fas fa-eye fa-2x mb-2"></i>
                                                <h5 class="card-title">@Model.Novel.ViewCount.ToString("N0")</h5>
                                                <p class="card-text">Lượt xem</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-gradient-secondary text-white mb-3">
                                            <div class="card-body text-center">
                                                <i class="fas fa-star fa-2x mb-2"></i>
                                                <h5 class="card-title">@Model.Novel.Rating.ToString("F1")</h5>
                                                <p class="card-text">Đánh giá (@Model.Novel.RatingCount)</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-gradient-success text-white mb-3">
                                            <div class="card-body text-center">
                                                <i class="fas fa-list fa-2x mb-2"></i>
                                                <h5 class="card-title">@Model.Novel.ChapterCount</h5>
                                                <p class="card-text">Số chương</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-gradient-dark text-white mb-3">
                                            <div class="card-body text-center">
                                                <i class="fas fa-comments fa-2x mb-2"></i>
                                                <h5 class="card-title">@Model.Novel.CommentCount</h5>
                                                <p class="card-text">Bình luận</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Novel Description -->
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0"><i class="fas fa-align-left me-2"></i>Mô tả</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">@Model.Novel.Description</p>
                                    </div>
                                </div>

                                <!-- Categories -->
                                @if (Model.Novel.Categories.Any())
                                {
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0"><i class="fas fa-tags me-2"></i>Thể loại</h5>
                                        </div>
                                        <div class="card-body">
                                            @foreach (var category in Model.Novel.Categories)
                                            {
                                                <span class="badge bg-secondary me-2 mb-2">@category.Name</span>
                                            }
                                        </div>
                                    </div>
                                }

                                <!-- Tags -->
                                @if (!string.IsNullOrEmpty(Model.Novel.Tags))
                                {
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0"><i class="fas fa-hashtag me-2"></i>Tags</h5>
                                        </div>
                                        <div class="card-body">
                                            @{
                                                var tags = Model.Novel.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                            }
                                            @foreach (var tag in tags)
                                            {
                                                <span class="badge bg-light text-dark me-2 mb-2">#@tag.Trim()</span>
                                            }
                                        </div>
                                    </div>
                                }

                                <!-- Additional Information -->
                                @if (!string.IsNullOrEmpty(Model.Novel.OriginalSource))
                                {
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0"><i class="fas fa-link me-2"></i>Nguồn gốc</h5>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text">@Model.Novel.OriginalSource</p>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                            <a asp-page="/Admin/Novels" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                            </a>
                            <a asp-page="/Admin/EditNovel" asp-route-id="@Model.Novel.Id" class="btn btn-warning me-md-2">
                                <i class="fas fa-edit me-2"></i>Chỉnh sửa
                            </a>
                            <button type="button" class="btn btn-danger" onclick="confirmDelete(@Model.Novel.Id, '@Model.Novel.Title')">
                                <i class="fas fa-trash me-2"></i>Xóa tiểu thuyết
                            </button>
                            </div>
                        </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-book fa-5x text-muted mb-4"></i>
                        <h5>Không tìm thấy tiểu thuyết</h5>
                        <p class="text-muted">Tiểu thuyết bạn đang tìm không tồn tại hoặc đã bị xóa.</p>
                        <a asp-page="/Admin/Novels" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                    </div>
                }
            </div>
        </div>
    }

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        }
        
        .bg-gradient-success {
            background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%) !important;
        }
        
        .bg-gradient-secondary {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%) !important;
        }
        
        .bg-gradient-dark {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%) !important;
        }
        
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translate3d(0, 40px, 0);
            }
            to {
                opacity: 1;
                transform: translate3d(0, 0, 0);
            }
        }

        .btn {
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .shadow {
            transition: all 0.3s ease;
        }

        .shadow:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2) !important;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize animations
            setTimeout(() => {
                document.querySelectorAll('.card').forEach((card, index) => {
                    card.style.animation = `fadeInUp 0.6s ease ${index * 0.1}s both`;
                });
            }, 100);
        });

        function confirmDelete(novelId, novelTitle) {
            if (confirm(`Bạn có chắc chắn muốn xóa tiểu thuyết "${novelTitle}"?\n\nHành động này sẽ xóa tất cả chương và bình luận liên quan và không thể hoàn tác.`)) {
                // Create a form to submit the delete request
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/Admin/Novels?handler=Delete`;
                
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '@Html.AntiForgeryToken()'.replace(/&lt;/g,'<').replace(/&gt;/g,'>').match(/value="([^"]+)"/)?.[1] || '';
                form.appendChild(tokenInput);
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = novelId;
                form.appendChild(idInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
} 