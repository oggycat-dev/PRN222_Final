@page "/Payment/Return"
@model FinalProject.Pages.Payment.ReturnModel
@{
    ViewData["Title"] = "Kết quả thanh toán";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (Model.Success)
            {
                <!-- Success Message -->
                <div class="alert alert-success text-center">
                    <div class="mb-3">
                        <i class="fas fa-check-circle fa-4x text-success"></i>
                    </div>
                    <h4 class="alert-heading">Thanh toán thành công!</h4>
                    <p class="mb-3">@Model.Message</p>
                    <hr>
                    <div class="row">
                        <div class="col-6">
                            <strong>Coins đã nạp:</strong> @Model.Coins.ToString("N0") coins
                        </div>
                        <div class="col-6">
                            <strong>Số dư hiện tại:</strong> @Model.NewBalance.ToString("N0") coins
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">Mã giao dịch: @Model.OrderRef</small>
                    </div>
                </div>
                
                <div class="text-center">
                    <a href="/Novels" class="btn btn-primary btn-lg">
                        <i class="fas fa-book me-2"></i>Quay về thư viện
                    </a>
                    <a href="/User/Dashboard" class="btn btn-outline-primary btn-lg ms-2">
                        <i class="fas fa-user me-2"></i>Dashboard
                    </a>
                </div>
            }
            else
            {
                <!-- Error Message -->
                <div class="alert alert-danger text-center">
                    <div class="mb-3">
                        <i class="fas fa-times-circle fa-4x text-danger"></i>
                    </div>
                    <h4 class="alert-heading">Thanh toán thất bại!</h4>
                    <p class="mb-3">@Model.ErrorMessage</p>
                    @if (!string.IsNullOrEmpty(Model.OrderRef))
                    {
                        <div class="mt-3">
                            <small class="text-muted">Mã giao dịch: @Model.OrderRef</small>
                        </div>
                    }
                </div>
                
                <div class="text-center">
                    <a href="/Novels" class="btn btn-warning btn-lg">
                        <i class="fas fa-redo me-2"></i>Thử lại
                    </a>
                    <a href="/Novels" class="btn btn-outline-secondary btn-lg ms-2">
                        <i class="fas fa-book me-2"></i>Quay về thư viện
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .alert {
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .btn-lg {
            padding: 0.75rem 2rem;
            border-radius: 10px;
            font-weight: 500;
        }
    </style>
}
}
